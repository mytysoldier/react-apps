# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Message {
  id: ID!
  text: String!
  createdAt: Timestamp!
  userId: ID!
}

type User {
  id: ID!
  name: String!
  createdAt: Timestamp!
  deletedAt: Timestamp!
}

type Query {
  messages: [Message!]!
}

input NewMessage {
  text: String!
  userId: ID!
}

type Mutation {
  createTodo(input: NewMessage!): Message!
}

type Subscription {
  messagePosted(userId: ID!): Message!
}
